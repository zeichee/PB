@model SamplePB.Models.ContactNumbersViewModel

@{
    ViewBag.Title = "DeleteContactNumber";
}

<h2>Delete Contact Number</h2>

<div>
    <hr />
    @using(Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m=>m.PersonId)
        @Html.HiddenFor(m=>m.ContactId)
        <dl class="dl-horizontal">

          
            <dt>
                @Html.DisplayNameFor(model => model.SelectedContactType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SelectedContactType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactNumber)
            </dd>
        </dl>

        <div class="form-actions no-color">
            <input type="submit" name="Delete" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "ShowContactDetails", new { id = Model.PersonId })
        </div>
        }
</div>