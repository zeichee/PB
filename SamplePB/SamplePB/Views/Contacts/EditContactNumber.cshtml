@model SamplePB.Models.ContactNumbersViewModel

@{
    ViewBag.Title = "Edit Contact Number";
    var message = TempData["AlertMessage"] ?? string.Empty;
}

<h2>Edit Contact Number</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m=>m.ContactId)
        @Html.HiddenFor(m => m.PersonId)
        <table class=" table table-bordered">
            <tr><td>
              
                <div class="form-group">
                    @Html.LabelFor(model => model.SelectedContactType, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.SelectedContactType, Model.ContactType)
                        @Html.ValidationMessageFor(model => model.SelectedContactType)
                    </div>
                </div>
                   
                <div class="form-group">
                    @Html.LabelFor(model => model.ContactNumber, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ContactNumber)
                        @Html.ValidationMessageFor(model => model.ContactNumber)
                    </div>
                </div>
            </tr>
        </table>
        <script type="text/javascript">
    var message = '@message';
    if(message)
        alert(message);
        </script>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "ShowContactDetails", new { id = Model.PersonId })
            </div>
        </div>
    </div>
          
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
